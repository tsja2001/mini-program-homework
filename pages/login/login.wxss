/* 适应不同屏幕大小 */
@media (max-width: 480px) {
  .content {
    width: 90%;
    margin: 0 auto;
  }
}
.out{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #141414;
  height: 100vh;
}

.content {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
}

.title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 20px;
}

.main {
  font-size: 20px;
  margin-bottom: 20px;
}

input{
  background-color: #555;
  border: none;
  color: #fff;
  box-sizing: border-box;
  padding: 10px;
  height: 130rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20px;
  border-radius: 5px;
}

button {
  background-color: #007aff;
  border: none;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  width: 100%;
  box-sizing: border-box;
  cursor: pointer;
  font-size: 18px;
  font-weight: bold;
}

button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}
