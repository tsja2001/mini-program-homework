<!-- 注册页面 -->
<view class="out">
  <mp-form id="form" bindsuccess="successHandler">
    <mp-cells title="修改数据">
      <mp-cell title="头像(轻点展开以删除)" wx:if="{{field === 'imgUrl'}}">
        <mp-uploader delete="{{true}}" wx:if="{{field === 'imgUrl'}}" files="{{formData.imgUrl}}" title="{{null}}" bindselect="imgSelectHandler"
          binddelete="imgDeleteHandler"></mp-uploader>
      </mp-cell>
      <mp-cell title="姓名" wx:if="{{field === 'name'}}">
        <input type="text" placeholder="请输入姓名" value="{{formData.name}}" bindinput="formHandler" data-field="name"></input>
      </mp-cell>
      <mp-cell title="性别" wx:if="{{field === 'sex'}}">
        <radio-group bindchange="formHandler" data-field="sex">
          <view style="margin-bottom: 10rpx;">
            <radio value="0" checked="{{formData.sex === '0'}}">
              男
            </radio>
          </view>
          <view style="margin-bottom: 10rpx;">
            <radio value="1" checked="{{formData.sex === '1'}}">
              女
            </radio>
          </view>
          <view>
            <radio value="2" checked="{{formData.sex === '2'}}">
              ...
            </radio>
          </view>
        </radio-group>
      </mp-cell>
      <mp-cell title="手机号码" wx:if="{{field === 'phonenum'}}">
        <input type="number" value="{{formData.phonenum}}" placeholder="请输入手机号码" bindinput="formHandler" data-field="phonenum"></input>
      </mp-cell>
      <mp-cell title="入学年月日" wx:if="{{field === 'date'}}">
        <picker mode="date" bindchange="formHandler" bindcancel="" data-field="date">
          <view class="weui-input">{{formData.date}}</view>
        </picker>
      </mp-cell>
      <mp-cell title="学校" wx:if="{{field === 'school'}}">
        <input type="text" value="{{formData.school}}" placeholder="请输入学校" bindinput="formHandler" data-field="school"></input>
      </mp-cell>
      <mp-cell title="学院" wx:if="{{field === 'xueyuan'}}">
        <input type="text" value="{{formData.xueyuan}}" placeholder="请输入学院" bindinput="formHandler" data-field="xueyuan"></input>
      </mp-cell>
      <mp-cell title="专业" wx:if="{{field === 'zhuanye'}}">
        <input type="text" value="{{formData.zhuanye}}" placeholder="请输入专业" bindinput="formHandler" data-field="zhuanye"></input>
      </mp-cell>
    </mp-cells>
  </mp-form>
  <button style="margin-top: 20rpx;" class="button" type="primary" bindtap="submitForm">确认修改</button>
</view>
