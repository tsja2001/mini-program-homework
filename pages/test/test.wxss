.out {
	padding-top: 30rpx;
	box-sizing: border-box;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background-color: #1a1a1a;
  color: #fff;
}

.content {
  width: 80%;
  background-color: #333;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
  text-align: center;
}

.title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 20px;
}

.question-item {
  margin-bottom: 10px;
}

.question-item-inner {
  background-color: #555;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.question-item-inner:hover {
  /* background-color: #444; */
}

.actived {
  background-color: #007aff;
  color: #fff;
}

button {
  background-color: #007aff;
  border: none;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
  width: 40%;
  box-sizing: border-box;
  cursor: pointer;
  font-size: 18px;
  font-weight: bold;
  margin: 10px;
}

button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}

button:last-child {
  margin-bottom: 20px;
}
